@model EmployeeDetailsViewModel

<div class="modal-header">
    <h5 class="modal-title">Employee Details</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="text-center mb-3">
        @if (!string.IsNullOrWhiteSpace(Model.PhotoUrl))
        {
            <img src="@Url.Content(Model.PhotoUrl)" alt="Photo of @Model.EmpName" class="rounded" style="max-width: 200px; width: 100%; height: auto; object-fit: cover;">
        }
        else
        {
            <i class="bi bi-person-circle display-3 text-secondary"></i>
        }
    </div>
    <dl class="row">
        <dt class="col-sm-4">Employee No.</dt>
        <dd class="col-sm-8">@Model.EmpNo</dd>
        <dt class="col-sm-4">Name</dt>
        <dd class="col-sm-8">@Model.EmpName</dd>
        <dt class="col-sm-4">Department</dt>
        <dd class="col-sm-8">@Model.DepartmentName</dd>
        <dt class="col-sm-4">Occupation</dt>
        <dd class="col-sm-8">@Model.OccupationName</dd>
        <dt class="col-sm-4">Job Title</dt>
        <dd class="col-sm-8">@(string.IsNullOrWhiteSpace(Model.JobTitle) ? "-" : Model.JobTitle)</dd>
        <dt class="col-sm-4">Gender</dt>
        <dd class="col-sm-8">@(string.IsNullOrWhiteSpace(Model.Gender) ? "-" : Model.Gender)</dd>
        <dt class="col-sm-4">Hired Date</dt>
        <dd class="col-sm-8">@Model.HiredDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-4">Resign Date</dt>
        <dd class="col-sm-8">@(Model.ResignDate.HasValue ? Model.ResignDate.Value.ToString("yyyy-MM-dd") : "-")</dd>
        <dt class="col-sm-4">Status</dt>
        <dd class="col-sm-8">@(Model.ResignDate.HasValue ? "Resigned" : "Active")</dd>
        <dt class="col-sm-4">Date of Birth</dt>
        <dd class="col-sm-8">@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("yyyy-MM-dd") : "-")</dd>
        <dt class="col-sm-4">Phone</dt>
        <dd class="col-sm-8">@(string.IsNullOrWhiteSpace(Model.Phone) ? "-" : Model.Phone)</dd>
        <dt class="col-sm-4">Email</dt>
        <dd class="col-sm-8">@(string.IsNullOrWhiteSpace(Model.Email) ? "-" : Model.Email)</dd>
        <dt class="col-sm-4">Address</dt>
        <dd class="col-sm-8">@(string.IsNullOrWhiteSpace(Model.Address) ? "-" : Model.Address)</dd>
    </dl>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" title="Close">
        <i class="bi bi-x-circle"></i>
    </button>
</div>

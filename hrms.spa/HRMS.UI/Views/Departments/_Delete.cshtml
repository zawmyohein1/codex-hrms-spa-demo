@model Department

<div class="modal-header">
    <h5 class="modal-title text-danger">Delete Department</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
    <form action="@Url.Action("DeleteConfirmed", new { id = Model.Id })"
          method="post"
          class="ajax-form"
          data-list-target="#department-list"
          data-list-url="@Url.Action("List")">
        @Html.AntiForgeryToken()
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i>
                <span class="visually-hidden">Delete</span>
            </button>
        </div>
    </form>
</div>

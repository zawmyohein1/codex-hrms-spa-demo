@model IEnumerable<Department>

@if (!Model.Any())
{
    <div class="alert alert-info">No departments found. Use the add button to create one.</div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Name</td>
                <td>@department.Description</td>
                <td class="text-end">
                    <button type="button"
                            class="btn btn-sm btn-link text-primary"
                            data-modal-url="@Url.Action("Edit", new { id = department.Id })"
                            data-modal-target="#modalForm"
                            aria-label="Edit department">
                        <i class="bi bi-pencil-square"></i>
                    </button>
                    <button type="button"
                            class="btn btn-sm btn-link text-danger"
                            data-modal-url="@Url.Action("Delete", new { id = department.Id })"
                            data-modal-target="#modalForm"
                            aria-label="Delete department">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@model Employee

<div class="modal-header">
    <h5 class="modal-title">Delete Employee</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <p>Are you sure you want to delete <strong>@Model.EmpName</strong> (@Model.EmpNo)?</p>
    <p class="mb-0 text-muted">This action cannot be undone.</p>
</div>
<div class="modal-footer">
    <form action="@Url.Action("DeleteConfirmed", new { id = Model.Id })"
          method="post"
          class="employee-ajax-form"
          data-list-target="#employee-list"
          data-list-url="@Url.Action("List")">
        @Html.AntiForgeryToken()
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

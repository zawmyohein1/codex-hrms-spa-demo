@model Employee
@{
    var photoUrl = !string.IsNullOrEmpty(Model.PhotoUrl) ? Url.Content($"~/{Model.PhotoUrl}") : null;
}

<div class="modal-header">
    <h5 class="modal-title">@Model.EmpName</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row g-4">
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(photoUrl))
            {
                <img src="@photoUrl" alt="@Model.EmpName" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" />
            }
            else
            {
                <i class="bi bi-person-circle display-1 text-secondary"></i>
            }
        </div>
        <div class="col-md-8">
            <dl class="row mb-0">
                <dt class="col-sm-4">Employee No</dt>
                <dd class="col-sm-8">@Model.EmpNo</dd>
                <dt class="col-sm-4">Department</dt>
                <dd class="col-sm-8">@(Model.Department?.Name ?? "-")</dd>
                <dt class="col-sm-4">Occupation</dt>
                <dd class="col-sm-8">@(Model.Occupation?.Title ?? "-")</dd>
                <dt class="col-sm-4">Job Title</dt>
                <dd class="col-sm-8">@(Model.JobTitle ?? "-")</dd>
                <dt class="col-sm-4">Gender</dt>
                <dd class="col-sm-8">@(Model.Gender ?? "-")</dd>
                <dt class="col-sm-4">Hired Date</dt>
                <dd class="col-sm-8">@(Model.HiredDate?.ToString("d") ?? "-")</dd>
                <dt class="col-sm-4">Resign Date</dt>
                <dd class="col-sm-8">@(Model.ResignDate?.ToString("d") ?? "-")</dd>
                <dt class="col-sm-4">Date of Birth</dt>
                <dd class="col-sm-8">@(Model.DateOfBirth?.ToString("d") ?? "-")</dd>
                <dt class="col-sm-4">Phone</dt>
                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Phone) ? "-" : Model.Phone)</dd>
                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Email) ? "-" : Model.Email)</dd>
                <dt class="col-sm-4">Address</dt>
                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Address) ? "-" : Model.Address)</dd>
            </dl>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>

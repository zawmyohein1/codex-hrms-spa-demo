@model OccupationFormViewModel
@{
    var isEdit = Model.Occupation.Id > 0;
    var title = isEdit ? "Edit Occupation" : "Add Occupation";
    var actionUrl = isEdit
        ? Url.Action("Edit", new { id = Model.Occupation.Id })
        : Url.Action("Create");
}

<div class="modal-header">
    <h5 class="modal-title">@title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form action="@actionUrl"
          method="post"
          class="ajax-form"
          data-list-target="#occupation-list"
          data-list-url="@Url.Action("List")">
        @Html.AntiForgeryToken()
        @if (isEdit)
        {
            @Html.HiddenFor(m => m.Occupation.Id)
        }
        <div class="mb-3">
            <label asp-for="Occupation.Title" class="form-label"></label>
            <input asp-for="Occupation.Title" class="form-control" />
            <span asp-validation-for="Occupation.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Occupation.DepartmentId" class="form-label"></label>
            <select asp-for="Occupation.DepartmentId" asp-items="Model.Departments" class="form-select">
                <option value="">Select department</option>
            </select>
            <span asp-validation-for="Occupation.DepartmentId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Occupation.Description" class="form-label"></label>
            <textarea asp-for="Occupation.Description" class="form-control"></textarea>
            <span asp-validation-for="Occupation.Description" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

@model IEnumerable<Occupation>

@if (!Model.Any())
{
    <div class="alert alert-info">No occupations found. Use the add button to create one.</div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Title</th>
                <th>Department</th>
                <th>Description</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var occupation in Model)
        {
            <tr>
                <td>@occupation.Title</td>
                <td>@occupation.Department?.Name</td>
                <td>@occupation.Description</td>
                <td class="text-end">
                    <button type="button"
                            class="btn btn-sm btn-link text-primary"
                            data-modal-url="@Url.Action("Edit", new { id = occupation.Id })"
                            data-modal-target="#modalForm"
                            aria-label="Edit occupation">
                        <i class="bi bi-pencil-square"></i>
                    </button>
                    <button type="button"
                            class="btn btn-sm btn-link text-danger"
                            data-modal-url="@Url.Action("Delete", new { id = occupation.Id })"
                            data-modal-target="#modalForm"
                            aria-label="Delete occupation">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
